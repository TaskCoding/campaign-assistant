<view class="container">
  <view>
    <label>活动名称</label>
    <input placeholder="请输入活动名称" data-key="name" bindinput="onTextInput" />
    <label>触发文字</label>
    <input placeholder="用户扫描包含该文字的图片时触发该活动" data-key="targetText" bindinput="onTextInput" />
    <view>
      <label>地点</label>
      <text id="txt_location" catchtap="onSelectLocation">
        {{campaign.conditions[0].data.name||'请点击选择活动地点'}}
      </text>
      <label>有效距离(米)</label>
      <input placeholder="请输入有效距离" data-key="radius" type="number" value="{{condition.data.radius}}" bindinput="onTextInput" />
    </view>
    <view>
      <label>活动奖励</label>
      <view>
        <label>类型</label>
        <text>优惠劵</text>
      </view>
      <view>
        <label>折扣力度(0-10折)</label>
        <input placeholder="请输入折扣力度" data-key="discount" type="digit" bindinput="onTextInput" />
      </view>
    </view>
    <label>开启</label>
    <switch checked="{{switchChecked}}" bindchange="onSwitchChange" />
    <button type="primary" catchtap="onSave">保存</button>
  </view>
